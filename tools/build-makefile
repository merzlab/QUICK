#  !---------------------------------------------------------------------!
#  ! Child build targets                                                 !
#  !---------------------------------------------------------------------!

cpmakein:
	@cp ./make.in $(libxcfolder)
	@cp ./make.in $(libxcfolder)/maple2c_device
	@cp ./make.in $(cudafolder)
	@cp ./make.in $(hipfolder)
	@cp ./make.in $(octfolder)
	@cp ./make.in $(subfolder)
	@cp ./make.in $(modfolder)
	@cp ./make.in $(blasfolder)


#================= common subroutine library ============================
quick_subs:
	@cd $(subfolder) && make --no-print-directory -j$(ncores) all

#================= quick module library =================================
quick_modules:
	@cd $(modfolder) && make --no-print-directory all
#================= octree subroutines   =================================
octree:
	@cd $(octfolder) && make --no-print-directory all
#============= targets for cuda =========================================
quick_cuda:
	@cd $(cudafolder) && make --no-print-directory allbutxc
	@cd $(cudafolder) && make --no-print-directory xc
#============= targets for cuda =========================================
quick_hip:
	@cd $(hipfolder) && make --no-print-directory allbutxc
	@cd $(hipfolder) && make --no-print-directory xc

#================= targets for BLAS =====================================
blas-quick:
	@cd $(blasfolder) && make --no-print-directory -j$(ncores) all
#==================== libxc cpu library =================================
libxc_cpu:
	@cd $(libxcfolder) && make --no-print-directory -j$(ncores) libxc_cpu
#==================== libxc cuda library =================================
libxc_gpu:
	@cd $(libxcfolder) && make --no-print-directory -j$(ncores) libxc_gpu

libxc_cuda:libxc_gpu
	@cd $(libxcfolder)/maple2c_device && make --no-print-directory -j$(ncores) libxc_cuda
#==================== libxc hip library =================================
libxc_hip:libxc_gpu
	@cd $(libxcfolder)/maple2c_device && make --no-print-directory -j$(ncores) libxc_hip
#=============== targets for CUBLAS =====================================

$(cublasobj):$(objfolder)/%.o:$(cublasfolder)/%.c
	@echo "[QUICK]  CC $@"
	$(VB)$(CC) $(CPP_FLAG) -c $< -o $@

#=============== targets for HIPBLAS =====================================
$(rocblasobj):$(objfolder)/%.o:$(rocblasfolder)/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@

$(rocblasmod):$(objfolder)/%.o:$(ROCBLAS_PATH)/include/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@

rocblas: $(rocblasmod) $(rocblasobj)

#=============== targets for CUSOLVER ===================================

$(cusolverobj):$(objfolder)/%.o:$(cusolverfolder)/%.c
	@echo "[QUICK]  CC $@"
	$(VB)$(CC) $(CPP_FLAG) -c $< -o $@

#=============== targets for ROCSOLVER ===================================
$(rocsolverobj):$(objfolder)/%.o:$(rocsolverfolder)/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@

rocsolver: $(rocsolverobj)

#===================== target for general src files =====================

$(OBJ):$(objfolder)/%.o:$(srcfolder)/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@
#===================== target for main src files ========================
$(MAIN):$(mainobjfolder)/%.o:$(srcfolder)/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@
#===================== target for compiling api test ====================
$(TESTAPI):$(mainobjfolder)/%.o:$(srcfolder)/%.f90
	@echo "[QUICK]  FC $@"
	$(VB)$(FC) $(CPPDEFS) $(CPPFLAGS) $(FFLAGS) -I$(objfolder) -c $< -o $@

#  !---------------------------------------------------------------------!
#  ! Parent build targets                                                !
#  !---------------------------------------------------------------------!

.PHONY: serial cuda mpi cudampi

serial: cpmakein libxc_cpu octree quick_modules quick_subs $(OBJ) $(MAIN) blas-quick $(TESTAPI)
	$(VB)$(ARCH) $(ARCHFLAGS) $(libfolder)/libquick.$(LIBEXT) $(objfolder)/*.o
	$(VB)$(FC) -o $(exefolder)/quick $(MAIN) -L$(libfolder) -lquick -lblas-quick -lxc $(LDFLAGS)
	$(VB)$(FC) -o $(exefolder)/test-api $(TESTAPI) -L$(libfolder) -lquick -lblas-quick -lxc $(LDFLAGS)

cuda: cpmakein libxc_cuda octree quick_cuda quick_modules quick_subs $(OBJ) $(MAIN) $(cusolverobj) $(cublasobj) $(TESTAPI)
	$(VB)$(ARCH) $(ARCHFLAGS) $(libfolder)/libquick-cuda.$(LIBEXT) $(objfolder)/*.o $(libxcdevobjfolder)/*.o
	$(VB)$(FC) -o $(exefolder)/quick.cuda $(MAIN) -L$(libfolder) -lquick-cuda -lxc-gpu $(CFLAGS) $(LDFLAGS)
	$(VB)$(FC) -o $(exefolder)/test-api.cuda $(TESTAPI) -L$(libfolder) -lquick-cuda -lxc-gpu $(CFLAGS) $(LDFLAGS)

mpi: cpmakein libxc_cpu octree quick_modules quick_subs $(OBJ) $(MAIN) blas-quick $(TESTAPI)
	$(VB)$(ARCH) $(ARCHFLAGS) $(libfolder)/libquick-mpi.$(LIBEXT) $(objfolder)/*.o
	$(VB)$(FC) -o $(exefolder)/quick.MPI $(MAIN) -L$(libfolder) -lquick-mpi -lblas-quick -lxc $(LDFLAGS)
	$(VB)$(FC) -o $(exefolder)/test-api.MPI $(TESTAPI) -L$(libfolder) -lquick-mpi -lblas-quick -lxc $(LDFLAGS)

cudampi: cpmakein libxc_cuda octree quick_cuda quick_modules quick_subs $(OBJ) $(MAIN) $(cusolverobj) $(cublasobj) $(TESTAPI)
	$(VB)$(ARCH) $(ARCHFLAGS) $(libfolder)/libquick-cudampi.$(LIBEXT) $(objfolder)/*.o $(libxcdevobjfolder)/*.o
	$(VB)$(FC) -o $(exefolder)/quick.cuda.MPI $(MAIN) -L$(libfolder) -lquick-cudampi -lxc-gpu $(CFLAGS) $(LDFLAGS)
	$(VB)$(FC) -o $(exefolder)/test-api.cuda.MPI $(TESTAPI) -L$(libfolder) -lquick-cudampi -lxc-gpu $(CFLAGS) $(LDFLAGS)

hip: cpmakein libxc_hip octree quick_hip rocblas rocsolver quick_modules quick_subs $(OBJ) $(MAIN) $(TESTAPI)
	$(VB)$(ARCH) rcsD $(libfolder)/libquick-dev-hip.$(LIBEXT) $(libxcdevobjfolder)/*.o 
	$(VB)$(ARCH) cr $(libfolder)/libquick-hip.$(LIBEXT) $(objfolder)/*.o
	$(VB)$(HIPCC) $(libfolder)/libquick-dev-hip.a -L$(libfolder) -lquick-hip -lxc-gpu \
	$(cudaxcobj) $(TESTAPI) -fgpu-rdc -o $(exefolder)/test-api.hip -lgfortran $(HIP_LD_FLAGS)       
	$(VB)$(HIPCC) $(libfolder)/libquick-dev-hip.a -L$(libfolder) -lquick-hip -lxc-gpu \
        $(cudaxcobj) $(MAIN) -fgpu-rdc -o $(exefolder)/quick.hip -lgfortran $(HIP_LD_FLAGS)

hipmpi: cpmakein libxc_hip octree quick_hip rocblas rocsolver quick_modules quick_subs $(OBJ) $(MAIN) $(TESTAPI)
	$(VB)$(ARCH) rcsD $(libfolder)/libquick-dev-hipmpi.$(LIBEXT) $(libxcdevobjfolder)/*.o 
	$(VB)$(ARCH) cr $(libfolder)/libquick-hipmpi.$(LIBEXT) $(objfolder)/*.o
	$(VB)$(HIPCC) $(HIP_MPI_LD_FLAGS) $(libfolder)/libquick-dev-hipmpi.a -L$(libfolder) -lquick-hipmpi -lxc-gpu \
	$(cudaxcobj) $(TESTAPI) -fgpu-rdc -o $(exefolder)/test-api.hip.MPI -lgfortran $(HIP_LD_FLAGS)       
	$(VB)$(HIPCC) $(HIP_MPI_LD_FLAGS) $(libfolder)/libquick-dev-hipmpi.a -L$(libfolder) -lquick-hipmpi -lxc-gpu \
	$(cudaxcobj) $(MAIN) -fgpu-rdc -o $(exefolder)/quick.hip.MPI -lgfortran $(HIP_LD_FLAGS)


#  !---------------------------------------------------------------------!
#  ! Cleaning targets                                                    !
#  !---------------------------------------------------------------------!

.PHONY: clean

clean:
	@-rm -f $(objfolder)/*.o $(mainobjfolder)/*.o $(inclfolder)/* $(exefolder)/* $(libfolder)/*
	@-rm -f $(libxcobjfolder)/*.o $(blasobjfolder)/*.o $(libxcdevobjfolder)/*.o
	@cd $(cudafolder) && make --no-print-directory clean
	@cd $(subfolder) && make --no-print-directory clean
	@cd $(blasfolder) && make --no-print-directory clean
	@cd $(modfolder) && make --no-print-directory clean
	@cd $(libxcfolder) && make --no-print-directory clean
	@cd $(libxcfolder)/maple2c_device && make --no-print-directory clean
